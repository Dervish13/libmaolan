#pragma once
#include <string>
#include <maolan/audioio>


class AudioOSSIn: public AudioIO
{
  public:
    AudioOSSIn(const std::size_t &channels);
    ~AudioOSSIn();

    void fetch();
    void process();
    std::size_t channels() const;
    int fd;
    int *rawData;
    int fragsize;

  protected:
    int samplerate;
    int format;
    int frag;
};
