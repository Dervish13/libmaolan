/* vim: set syntax=cpp: */
#pragma once
#include <maolan/audioio>


class AudioConnection
{
  public:
    AudioConnection();
    AudioConnection(AudioIO *connectTo, std::size_t &ch);
    ~AudioConnection();

    static std::vector<AudioConnection *> connections;

    AudioIO * get();
    void add(AudioIO *connectTo, std::size_t &ch);
    AudioChunk pull();

  protected:
    AudioIO *to;
    std::size_t channel;
    std::vector<AudioConnection *>::iterator it;
};
