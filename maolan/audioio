#pragma once
#include <vector>
#include <maolan/audiochunk>


class AudioIO
{
  public:
    AudioIO(const size_t &size = 0);

    virtual void fetch() = 0;
    virtual std::size_t channels() const = 0;
    AudioChunk pull(const unsigned &channel);

  protected:
    std::vector<AudioChunk> outputs;
};

