CXXFILES = $(wildcard src/*.cpp)
OBJECTS = $(CXXFILES:.cpp=.o)

all: $(PROG_CXX)

$(PROG_CXX): $(OBJECTS)
        @echo -n "Linking $(PROG_CXX) ... "
        @$(CXX) $(CXXFLAGS) $(OBJECTS) -o src/$(PROG_CXX) $(LDFLAGS)
        @echo "done"

.cpp.o:
        @echo -n "$< ... "
        @$(CXX) $(CXXFLAGS) -c $< -o $@
        @echo "done"

install:
        install -m 0755 src/$(PROG_CXX) $(DESTDIR)$(PREFIX)/bin

clean:
        rm -rf $(OBJECTS) src/$(PROG_CXX)
